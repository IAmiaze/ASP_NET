@page "/"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Home</PageTitle>

<div class="container py-5 bg-dark text-light rounded">
    <div class="row mb-5 align-items-center">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-info">Welcome, Miaze!</h1>
            <p class="lead">
                Build fast, modern, and interactive web apps with Blazor and .NET.
            </p>
            <a href="https://learn.microsoft.com/aspnet/core/blazor" target="_blank" class="btn btn-outline-info btn-lg mt-3">
                Learn Blazor
            </a>
        </div>
        <div class="col-md-6 text-center">
            <img src="favicon.png" class="img-fluid" alt="Blazor Logo" style="max-height: 250px;">
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card bg-secondary border-light shadow-sm h-100">
                <div class="card-body text-light">
                    <h5 class="card-title">⚡ Fast Development</h5>
                    <p class="card-text">Use .NET and C# for full-stack web apps with reusable components.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-secondary border-light shadow-sm h-100">
                <div class="card-body text-light">
                    <h5 class="card-title">🎨 Modern UI</h5>
                    <p class="card-text">Style with Bootstrap, CSS, or any front-end framework you like.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-secondary border-light shadow-sm h-100">
                <div class="card-body text-light">
                    <h5 class="card-title">🔒 Secure</h5>
                    <p class="card-text">Built-in support for authentication, authorization, and role-based access.</p>
                </div>
            </div>
        </div>
    </div>
</div>
